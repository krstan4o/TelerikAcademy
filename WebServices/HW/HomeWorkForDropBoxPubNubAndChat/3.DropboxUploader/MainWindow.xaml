<Window x:Class="_3.DropboxUploader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dropbox Uploader" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize">
    <Grid>
        <Border Padding="10">
            <StackPanel>
                <WrapPanel> 
                    <Label>File path:</Label>
                    <TextBox x:Name="txtFilePath" Width="250" />
                    <Button x:Name="btnBrowse" Width="120" Click="btnBrowse_Click">Browse</Button>
                </WrapPanel>
                <Button x:Name="btnSendFile" Click="btnSendFile_Click" Width="200" 
                        Height="40" Margin="10">Send file</Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
