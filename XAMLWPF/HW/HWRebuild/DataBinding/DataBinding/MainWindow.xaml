<Window x:Class="DataBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <TextBlock x:Name="SimpleTextBlock" Width="100" Text="asdasd" FontSize="{Binding ElementName=SliderFontSize, Path=Value, UpdateSourceTrigger=PropertyChanged}"/>
        <Slider x:Name="SliderFontSize" Minimum="5" Maximum="50" Width="100">
            <Slider.Value>
                20
            </Slider.Value>
        </Slider>

        <Label>
            <Label.Content>
                <TextBlock>
                    FontSize:
                    <TextBlock Text="{Binding ElementName=SimpleTextBlock, Path=FontSize}">

                    </TextBlock>
                </TextBlock>

            </Label.Content>
        </Label>
    </StackPanel>
</Window>
