<Window x:Class="ButtonWithLabel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Label Name="Label" Target="{Binding ElementName=Button}"></Label>
        <Button Name="Button" Click="ButtonClick">Click me.</Button>
    </StackPanel>
</Window>
