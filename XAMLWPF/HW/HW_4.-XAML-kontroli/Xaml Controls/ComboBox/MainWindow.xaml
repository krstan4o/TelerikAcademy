<Window x:Class="ComboBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ComboBox Height="50">
            <ComboBoxItem>Text (string)</ComboBoxItem>
            <ComboBoxItem>
                <ComboBoxItem.Content>
                    <Ellipse Fill="Aqua" Width="50" Height="50"></Ellipse>
                </ComboBoxItem.Content>
            </ComboBoxItem>
            <ComboBoxItem>
                <ComboBoxItem.Content>
                    <Image Source="http://www.eduroam.gr/static/img/twitter_img.png" />
                </ComboBoxItem.Content>
            </ComboBoxItem>
        </ComboBox>
    </Grid>
</Window>
