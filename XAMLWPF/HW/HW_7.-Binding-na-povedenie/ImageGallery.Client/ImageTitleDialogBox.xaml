<Window x:Class="ImageGallery.Client.ImageTitleDialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Title selection" Height="135" Width="300">
    <StackPanel HorizontalAlignment="Center">
        <TextBlock HorizontalAlignment="Center" Margin="10">Please type image title:</TextBlock>
        <TextBox Name="tbImageTitle" Width="250"></TextBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="buttonOK" Margin="10" Click="buttonOK_Click" Padding="20,5">OK</Button>
            <Button Name="buttonCancel" Margin="10" Click="buttonCancel_Click" Padding="5">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
